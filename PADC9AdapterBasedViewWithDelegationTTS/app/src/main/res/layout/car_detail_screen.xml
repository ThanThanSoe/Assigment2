<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_car_name"
        android:text="Audi A5"
        android:textColor="#2828B2"
        android:textSize="20sp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:id="@+id/img_car"
        android:src="@drawable/hyundai"
        android:layout_marginLeft="50dp"
        android:layout_below="@+id/tv_car_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/tv_car_type"
        android:text="Luxury Car"
        android:textColor="#F3BCF3"
        android:layout_marginLeft="170dp"
        android:layout_below="@+id/img_car"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_car_type_audi"
        android:text="Audi A5 Sportback or similar"
        android:textSize="15sp"
        android:layout_marginLeft="120dp"
        android:layout_below="@+id/tv_car_type"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_car_type_date"
        android:text="Apr 3, 12pm - Apr 6, 12pm"
        android:layout_marginLeft="140dp"
        android:layout_below="@+id/tv_car_type_audi"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_car_type_date"
        android:background="#2828B2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_dollar"
            android:text="$1,417"
            android:textColor="#F8F8FA"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_per_day"
            android:text="Car per day"
            android:layout_toRightOf="@+id/tv_dollar"
            android:layout_marginLeft="50dp"
            android:textColor="#F8F8FA"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_fees"
            android:text="include taxes and fees"
            android:layout_toRightOf="@+id/tv_dollar"
            android:layout_below="@+id/tv_per_day"
            android:layout_marginLeft="50dp"
            android:textColor="#F8F8FA"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book"
            android:layout_toRightOf="@id/tv_fees"
            android:layout_marginLeft="50dp"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_offer"
        android:text="Offer Details"
        android:textColor="#0000FF"
        android:textSize="20sp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/tv_car_type_audi"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:src="@drawable/magnolia"
        android:id="@+id/img_label"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/tv_car_type_audi"
        android:layout_toRightOf="@+id/tv_offer"
        android:layout_marginLeft="200dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_auto"
        android:text="Automatic"
        android:layout_below="@+id/tv_offer"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_air"
        android:text="Air Conditioning"
        android:layout_below="@+id/tv_auto"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_convertable"
        android:text="Convertable"
        android:layout_below="@+id/tv_air"
        android:layout_marginLeft="10dp"
        />
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/img_people"
        android:src="@drawable/manuser"
        android:layout_below="@+id/img_label"
        android:layout_toRightOf="@+id/tv_convertable"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_image_people"
        android:text="4"
        android:layout_below="@+id/img_label"
        android:layout_toRightOf="@+id/img_people"
        android:layout_marginTop="15dp"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/img_network"
        android:src="@drawable/briefcase"
        android:layout_below="@+id/img_label"
        android:layout_toRightOf="@+id/tv_image_people"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_image_network"
        android:text="4"
        android:layout_below="@+id/img_label"
        android:layout_toRightOf="@+id/img_network"
        android:layout_marginTop="15dp"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/img_customer"
        android:src="@drawable/document"
        android:layout_below="@+id/img_label"
        android:layout_toRightOf="@+id/tv_image_network"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_image_customer"
        android:text="4"
        android:layout_below="@+id/img_label"
        android:layout_toRightOf="@+id/img_customer"
        android:layout_marginTop="15dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/img_map"
        android:src="@drawable/map1"
        android:layout_below="@+id/tv_convertable"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_date"
        android:text="Apr 3,12pm"
        android:layout_below="@id/img_map"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_pickup"
        android:text="Pick up"
        android:textColor="#C0C0C0"
        android:layout_below="@id/tv_date"
        android:layout_marginLeft="10dp"
        />
    <View
        android:layout_width="170dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="30dp"
        android:background="#888888"
        android:layout_below="@+id/img_map"
        android:layout_toRightOf="@+id/tv_date"
        android:id="@+id/view"
        android:layout_marginLeft="25dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_airport"
        android:text="In Terminal"
        android:textColor="#F3BCF3"
        android:layout_below="@id/view"
        android:layout_toRightOf="@+id/tv_pickup"
        android:layout_marginLeft="80dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_end_date"
        android:text="Apr 6,12pm"
        android:layout_below="@id/img_map"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/tv_airport"
        android:layout_marginLeft="100dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_drop_off"
        android:text="Drop Off"
        android:textColor="#C0C0C0"
        android:layout_below="@id/tv_date"
        android:layout_toRightOf="@+id/tv_airport"
        android:layout_marginLeft="100dp"
        />



</RelativeLayout>